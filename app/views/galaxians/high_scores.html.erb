<h1>Galaxian Scores</h1>
<%@galaxians.sort!{ |x,y| y[:score] <=> x[:score] }%>
<table class="table">  
  <thead>  
    <tr>  
      <th>Rank</th>
      <th>User</th>  
      <th>Score</th>  
    </tr>  
  </thead>  
  <% @galaxians.each_with_index do |g, i|%>
    <tbody>  
      <tr>  
	<td><%=i+1%></td>
	<td><%= gravatar_for User.find(g.userID), size:52 %><%=link_to "#{g.user}", user_path(g.userID) %></td>  
        <td><%=g.score%></td>  
      </tr>  
    </tbody>  
    <%end%>
</table> 
