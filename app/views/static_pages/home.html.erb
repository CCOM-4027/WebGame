<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Bricks</h3>
      <body onload="init();">
	<canvas id="canvas" width="600" height="600" style="border:1px solid;"></canvas>
	<br>
	<form>
	  <input type="submit" onclick="startdraw(); return false;" value="start">
	  <input type="submit" onclick="alert(document.getElementByID('canvas').width);abort() ; " value="clear">
      </body>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Cloud Game</h1>

    <h2>Sign up to play</h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %> 
