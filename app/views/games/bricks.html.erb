<%= javascript_include_tag "bricks" %>
<h1>Bricks</h1>
<body onload="init();">
  <div class= "brickspad">
    <canvas id="canvas" width="400" height="400" style="border:3px solid;"></canvas>
  </div>
  <br>
  <div id = "br-score">Score:</div>
  <div id = "br-lives">Lives:</div>
  <input type ="text" readonly id = "br-box">
  <input type ="text" readonly id = "br-box2"> 
  <form>
    <input type="submit" id = "br-start_button" onclick="startdraw();this.disabled = 'disabled';return false;" value="start">
    <input type="submit" onclick="abort() ; " value="clear">
  </form>
  <h2><%= link_to "Bricks Scores", bricks_scores_path %></h2>

</body>
