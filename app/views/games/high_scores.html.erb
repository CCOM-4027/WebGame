<h1>Bricks Scores</h1>
<%@bricks.sort!{ |x,y| y[:score] <=> x[:score] }%>
<table class="table">  
  <thead>  
    <tr>  
      <th>Rank</th>
      <th>User</th>  
      <th>Score</th>  
    </tr>  
  </thead>  
  <% @bricks.each do |g|%>
    <tbody>  
      <tr>  
	<td><%=i+1%></td>
        <td><%=link_to "#{g.user}", user_path(g.userID) %></td>  
        <td><%=g.score%></td>  
      </tr>  
    </tbody>  
    <%end%>
</table>
